<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_const_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White_clr"
    tools:context="com.numnu.android.fragments.auth.LoginFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size8"
        android:layout_marginRight="@dimen/size8"
        android:layout_marginTop="@dimen/size10"
        android:contentDescription="@string/app_name"
        android:src="@drawable/loginicon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@style/FontAvenirheavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size8"
        android:layout_marginTop="@dimen/size9"
        android:text="@string/signup_with_email"
        android:textColor="@color/sinin_lblcolor"
        android:textSize="@dimen/font_large"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/sinup_btn_facebook"
        style="@style/facebook_login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:layout_marginTop="@dimen/size10"
        android:drawableLeft="@drawable/fb_logo__blue_29"
        android:drawableStart="@drawable/fb_logo__blue_29"
        android:paddingBottom="@dimen/size7"
        android:paddingEnd="@dimen/size50"
        android:paddingLeft="@dimen/size60"
        android:paddingRight="@dimen/size50"
        android:paddingStart="@dimen/size60"
        android:text="@string/facebook_sign_up"
        android:textSize="@dimen/text9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/signup_or_txt"
        style="@style/FontAvenirLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:text="or"
        android:textSize="@dimen/text12"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sinup_btn_facebook" />

    <Button
        android:id="@+id/button_signup"
        style="@style/login_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/size25"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:layout_marginTop="@dimen/size8"
        android:text="@string/sign_up"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password_layout"
        app:layout_constraintVertical_bias="0.284" />

    <TextView
        android:id="@+id/textView2"
        style="@style/FontAvenirMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size8"
        android:layout_marginLeft="@dimen/size8"
        android:layout_marginRight="@dimen/size8"
        android:layout_marginStart="@dimen/size8"
        android:layout_marginTop="@dimen/size6"
        android:text="@string/already_have_an_account"
        android:textColor="@color/Already_txtcolor"
        android:textSize="@dimen/text11"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_signup" />

    <TextView
        android:id="@+id/textView_signin"
        style="@style/FontAvenirMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size8"
        android:layout_marginStart="@dimen/size8"
        android:text="@string/sign_in"
        android:textColor="@color/weblink_color"
        android:textSize="@dimen/text11"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <EditText
        android:id="@+id/et_email"
        style="@style/FontAvenirMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/text14"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_textView5" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_password_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/size45"
        android:layout_marginEnd="@dimen/size30"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:layout_marginStart="@dimen/size30"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_textView6"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_password"
            style="@style/FontAvenirMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:paddingTop="0dp"
            android:textSize="@dimen/text14" />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:id="@+id/et_password_layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size30"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:layout_marginStart="@dimen/size30"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_textView6" />

    <TextView
        android:id="@+id/txt_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="forgetPassword"
        android:text="@string/forgot_password"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/et_password_layout"
        app:layout_constraintTop_toBottomOf="@+id/et_password_layout"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/signup_textView5"
        style="@style/FontAvenirMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:text="@string/email_address"
        android:textColor="@color/email_color"
        android:textSize="@dimen/text14"
        app:layout_constraintLeft_toLeftOf="@+id/et_email"
        app:layout_constraintTop_toBottomOf="@+id/signup_or_txt" />

    <TextView
        android:id="@+id/signup_textView6"
        style="@style/FontAvenirMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size8"
        android:text="@string/password"
        android:textColor="@color/email_color"
        android:textSize="@dimen/text14"
        app:layout_constraintLeft_toLeftOf="@+id/et_password_layout"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />


    <TextView
        android:id="@+id/textView4"
        style="@style/FontAvenirMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:layout_marginTop="@dimen/size9"
        android:gravity="center_horizontal"
        android:text="@string/by_signing_up_you_agree_to_our_terms_of_service_privacy_policy"
        android:textColor="@color/bysignup_txtcolor"
        android:textSize="@dimen/text11"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</android.support.constraint.ConstraintLayout>



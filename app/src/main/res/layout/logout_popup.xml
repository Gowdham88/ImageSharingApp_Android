<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/genlin_lay"
    android:background="@drawable/logout_radius"
    android:layout_marginRight="26dp"
    android:layout_marginLeft="26dp"
    >
        <!--<TextView-->
        <!--style="@style/FontAvenirLight"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:text="Select Gender"-->
        <!--android:textSize="12dp"-->
        <!--android:gravity="center"/>-->
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/Edittxt_lineclr" />-->
        <TextView
            style="@style/FontAvenirMedium"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Do you want to logout?"
            android:id="@+id/gender_female"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Edittxt_lineclr"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ok_txt"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Ok"
                android:textColor="@color/weblink_color"
                android:textSize="16dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/Edittxt_lineclr"/>

            <TextView
                android:id="@+id/cancel_txt"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="Cancel"
                android:textColor="@color/colorAccent"
                android:textSize="16dp" />
        </LinearLayout>


</LinearLayout>
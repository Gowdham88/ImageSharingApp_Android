<android.support.v7.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/toolbar_background_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="@dimen/size25"
            android:layout_height="@dimen/size25"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/back_arrow" />
        <TextView
            style="@style/FontAvenirMedium"
            android:id="@+id/toolbar_title"
            android:text="@string/app_name"
            android:gravity="center"
            android:textColor="@color/name_black"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/back_word"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/web_backimg"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:layout_alignParentRight="true" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/forward"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forwardarrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/setting_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
           android:layout_alignParentEnd="true"
            android:src="@drawable/ic_settings"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/google_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/googleimg"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    </android.support.v7.widget.Toolbar>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/notification_item_margin"
    tools:context="com.numnu.android.activity.HomeActivity">

    <ImageView
        android:id="@+id/review_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/ic_launcher" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/review_image"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name"
        android:textSize="20sp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_toRightOf="@+id/user_image"
        android:layout_toEndOf="@+id/user_image" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/review_image"
        android:layout_alignRight="@+id/review_image"
        android:layout_below="@+id/review_image"
        android:layout_alignBaseline="@+id/user_image"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />
    <ImageView
        android:id="@+id/imageView9"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/review_image"
        android:layout_alignBaseline="@+id/user_image"
        android:layout_toLeftOf="@+id/imageView10"
        android:layout_toStartOf="@+id/imageView10" />

    <TextView
        android:id="@+id/text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:drawableLeft="@drawable/ic_maplocation"
        android:textSize="20sp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_below="@+id/user_image"/>
    <TextView
        android:id="@+id/text_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item name"
        android:drawableLeft="@drawable/ic_maplocation"
        android:textSize="20sp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_below="@+id/text_location"/>
    <TextView
        android:id="@+id/text_business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business name"
        android:drawableLeft="@drawable/ic_maplocation"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/text_item_name"
        android:layout_toEndOf="@+id/text_item_name"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_below="@+id/text_location"/>
    <TextView
        android:id="@+id/text_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event name"
        android:drawableLeft="@drawable/ic_maplocation"
        android:textSize="20sp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_below="@+id/text_item_name"/>
    <TextView
        android:id="@+id/text_users_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="users name"
        android:drawableLeft="@drawable/ic_maplocation"
        android:textSize="20sp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_below="@+id/text_event_name"/>
</RelativeLayout>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/White_clr"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.numnu.android.activity.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:id="@+id/search_food_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="41dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/search_image_corner_radius"
                android:padding="6dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/et_search_food"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/search_icon"
                android:background="@drawable/edittext_corner_radius"
                android:hint="Search"
                fontPath="fonts/Avenir-Book.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="14sp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingRight="8dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_location_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="41dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/search_image_corner_radius"
                android:padding="6dp"
                android:src="@drawable/ic_search_location" />

            <EditText
                android:id="@+id/et_search_location"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/location_icon"
                android:background="@drawable/edittext_corner_radius"
                android:hint="Location"
                fontPath="fonts/Avenir-Book.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:paddingRight="8dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"/>
        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:visibility="gone"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/dark_grey" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/events_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/current_events_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/current_upcoming_events"
                    android:textColor="@color/dark_grey"
                    fontPath="fonts/Avenir-Medium.ttf"
                    android:textSize="@dimen/font_normal"
                    tools:ignore="MissingPrefix" />

                <ImageView
                    android:id="@+id/view_current_event_list"
                    android:layout_width="@dimen/toolbar_icon_width"
                    android:layout_height="@dimen/toolbar_icon_width"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_arrow" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/current_up_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/current_events_text"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:reverseLayout="false"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/current_events_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/current_upcoming_events"
                    android:textColor="@color/dark_grey"
                    fontPath="fonts/Avenir-Medium.ttf"
                    android:textSize="@dimen/font_normal"
                    tools:ignore="MissingPrefix" />

                <ImageView
                    android:id="@+id/view_current_event_list1"
                    android:layout_width="@dimen/toolbar_icon_width"
                    android:layout_height="@dimen/toolbar_icon_width"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_arrow" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/current_up_recyclerview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/current_events_text1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:reverseLayout="false"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/current_events_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/current_upcoming_events"
                    android:textColor="@color/dark_grey"
                    fontPath="fonts/Avenir-Medium.ttf"
                    android:textSize="@dimen/font_normal"
                    tools:ignore="MissingPrefix" />

                <ImageView
                    android:id="@+id/view_current_event_list2"
                    android:layout_width="@dimen/toolbar_icon_width"
                    android:layout_height="@dimen/toolbar_icon_width"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_arrow" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/current_up_recyclerview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/current_events_text2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:reverseLayout="false"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/past_events_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/past_events"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/font_normal" />

                <ImageView
                    android:id="@+id/view_past_event_list"
                    android:layout_width="@dimen/toolbar_icon_width"
                    android:layout_height="@dimen/toolbar_icon_width"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_arrow" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/past_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/past_events_text"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:reverseLayout="false">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_results_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</android.support.design.widget.CoordinatorLayout>
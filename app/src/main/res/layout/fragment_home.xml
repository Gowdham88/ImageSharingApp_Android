<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.numnu.android.activity.HomeActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar"/>

        <SearchView
            style="@style/MySearchViewStyle"
            android:id="@+id/search_food"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="4dp"
            android:iconifiedByDefault="false"
            android:queryBackground="@drawable/search_background"
            android:searchIcon="@drawable/ic_search_with_background"
            android:clickable="true"
            android:queryHint="Search food..."
            tools:targetApi="lollipop" />
        <SearchView
            android:id="@+id/search_location"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="4dp"
            android:searchIcon="@drawable/ic_location_with_background"
            android:queryBackground="@drawable/search_background"
            android:iconifiedByDefault="false"
            android:queryHint="Search by location..."
            tools:targetApi="lollipop" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:tabTextColor="@color/tab_text_color"
            app:tabSelectedTextColor="@color/black"
            app:tabMode="scrollable"
            app:tabGravity="fill"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/current_events_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@android:color/darker_gray"
            android:text="@string/current_upcoming_events"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/view_current_event_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/current_up_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/current_events_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:reverseLayout="false">
        </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/past_events_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/past_events"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/view_past_event_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/past_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/past_events_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:reverseLayout="false">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:id="@+id/custom_dialog_layout_design_user_input"
    android:background="#FAFAFA"
    android:paddingTop="@dimen/size20"
    android:paddingBottom="@dimen/size20"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size20"
        android:id="@+id/dialog_image"
        android:background="#FAFAFA"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_share"
        android:layout_alignParentStart="true" />


    <TextView
        style="@style/FontAvenirMedium"
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:textColor="@color/darker_grey"
        android:textSize="@dimen/text16"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bookmark_icon"
        android:layout_toEndOf="@+id/bookmark_icon" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size20"
        android:id="@+id/bookmark_icon"
        android:background="#FAFAFA"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_alignTop="@+id/bookmark_title"
        android:layout_alignLeft="@+id/dialog_image"
        android:src="@drawable/ic_bookmark"
        android:layout_alignStart="@+id/dialog_image" />


    <TextView
        style="@style/FontAvenirMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bookmark_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bookmark"
        android:gravity="center_vertical"
        android:textColor="@color/darker_grey"
        android:textSize="@dimen/text16"
        android:layout_below="@+id/share_title"
        android:layout_alignLeft="@+id/share_title"
        android:layout_alignStart="@+id/share_title"
        android:layout_marginTop="@dimen/size20" />
    </RelativeLayout>

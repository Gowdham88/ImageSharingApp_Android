<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/event_details_margin"
    tools:context="com.numnu.android.activity.HomeActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="120dp"
        android:layout_height="100dp"
        app:cardCornerRadius="@dimen/image_card_corner_radius"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/notification_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/food_2616456_1920"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flatron"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/card_view"
        android:layout_toRightOf="@+id/card_view"
        android:layout_toEndOf="@+id/card_view"
        android:layout_marginStart="26dp"
        app:layout_constraintLeft_toRightOf="@+id/card_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView8"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintTop_toTopOf="@+id/card_view"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bugers, Food Truck"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/text_notification"
        app:layout_constraintLeft_toLeftOf="@+id/text_notification" />


</android.support.constraint.ConstraintLayout>
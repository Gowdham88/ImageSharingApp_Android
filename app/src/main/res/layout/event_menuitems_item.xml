<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:cardCornerRadius="@dimen/image_card_corner_radius"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/notification_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/food_for_lunch_mom"
                />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/menu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textSize="20sp"
            android:layout_toRightOf="@id/card_view"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />


        <HorizontalScrollView
            android:id="@+id/chips_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_view"
            android:scrollbarSize="0.5dp"
            android:layout_below="@+id/menu_item_name">


            <LinearLayout
                android:layout_marginLeft="@dimen/event_details_margin"
                android:layout_marginRight="@dimen/event_details_margin"
                android:layout_marginTop="@dimen/event_details_margin"
                android:layout_marginBottom="@dimen/event_details_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:background="@drawable/tag_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="food" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/tag_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Rum"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/tag_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Wine" />
                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/tag_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Wine" />
                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/tag_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Wine" />
                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/tag_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Wine" />
                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/tag_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Wine" />
                <TextView
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/tag_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Wine" />
            </LinearLayout>

        </HorizontalScrollView>


    </RelativeLayout>

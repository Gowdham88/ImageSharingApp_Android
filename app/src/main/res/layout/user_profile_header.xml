<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/business_rel_lay"
    android:layout_marginTop="10dp"
    android:background="@color/postBng_color"
    android:padding="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dup_men_image" />
    <TextView
        style="@style/FontAvenirMedium"
        android:textColor="@color/event_map"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_below="@id/notification_image"
        android:text="Marc chiriqui"
        android:textSize="@dimen/size12"
        />
    <TextView
        style="@style/FontAvenirMedium"
        android:textColor="@color/event_map"
        android:id="@+id/txt_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_city"
        android:drawablePadding="4dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_below="@id/chips_layout"
        android:layout_alignStart="@+id/business_name"
        android:layout_alignLeft="@+id/business_name"
        android:text="Montreal"
        android:textSize="@dimen/text12"/>


    <TextView
        android:id="@+id/business_name"
        style="@style/FontAvenirMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notification_image"
        android:layout_toRightOf="@+id/notification_image"
        android:text="I have loved pizza since i was born!"
        android:textColor="@color/event_map" />


    <HorizontalScrollView
        android:id="@+id/chips_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_below="@+id/business_name"
        android:layout_toRightOf="@id/notification_image"
        android:layout_marginTop="@dimen/spacing_small"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_small"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TagStyle"
                android:text="food" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Rum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />
        </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>

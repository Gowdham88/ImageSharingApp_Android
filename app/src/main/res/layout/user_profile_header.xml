<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="171dp"
    android:id="@+id/business_rel_lay"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:background="@color/postBng_color"
    android:padding="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notification_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/dup_men_image" />
    <TextView
        style="@style/FontAvenirMedium"
        android:textColor="@color/event_map"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_below="@id/notification_image"
        android:text="Marc chiriqui"
        android:layout_centerVertical="true"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/txt_city"
        style="@style/FontAvenirMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chips_layout"
        android:layout_alignStart="@+id/chips_layout"
        android:layout_below="@+id/chips_layout"
        android:layout_marginTop="15dp"

        android:drawableLeft="@drawable/ic_city"
        android:drawablePadding="4dp"
        android:text="Montreal"
        android:textColor="@color/event_map"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/business_name"
        style="@style/FontAvenirMedium"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notification_image"
        android:layout_toRightOf="@+id/notification_image"
        android:text="@string/profile_header_str"
        android:textColor="@color/event_map" />


    <HorizontalScrollView
        android:id="@+id/chips_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/business_name"
        android:layout_toRightOf="@id/notification_image"
        android:layout_marginTop="15dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_small"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TagStyle"
                android:text="food" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Rum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                style="@style/TagStyle"
                android:text="Wine" />
        </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>

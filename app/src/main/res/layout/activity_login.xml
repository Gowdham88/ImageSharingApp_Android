<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@color/White_clr"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/const_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.numnu.android.fragments.auth.LoginFragment"
    tools:layout_editor_absoluteY="@dimen/size25"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size8"
        android:layout_marginRight="@dimen/size8"
        android:layout_marginTop="@dimen/size15"
        android:contentDescription="@string/app_name"
        android:src="@drawable/loginicon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@style/FontAvenirheavy"
        android:textColor="@color/sinin_lblcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:text="@string/login_with_email"
        android:textSize="@dimen/font_large"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    >
    <Button
        android:id="@+id/login_btn_facebook"
        style="@style/facebook_login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/facebook_sign_in"
        android:textSize="14dp"
        android:layout_marginTop="@dimen/size10"
        android:drawableStart="@drawable/fb_logo__blue_29"
        android:drawableLeft="@drawable/fb_logo__blue_29"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginStart="@dimen/size35"
        android:layout_marginEnd="@dimen/size30"
        android:paddingLeft="@dimen/size50"
        android:paddingStart="@dimen/size50"
        android:paddingRight="@dimen/size45"
        android:paddingEnd="47dp"
        android:paddingBottom="@dimen/size7"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
        android:id="@+id/or_txt"
        style="@style/FontAvenirLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:textSize="@dimen/text12"
        android:text="or"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn_facebook" />
    <Button
        android:id="@+id/button_login"
        style="@style/login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:text="@string/sign_in"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/size30"
        android:layout_marginEnd="@dimen/size30"
        android:layout_marginBottom="@dimen/size25"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        android:layout_marginTop="@dimen/size8"
        app:layout_constraintTop_toBottomOf="@+id/txt_forget_pwd"
        app:layout_constraintVertical_bias="0.284" />


    <TextView
        android:id="@+id/textView2"
        style="@style/FontAvenirMedium"
        android:textSize="@dimen/text11"
        android:textColor="@color/Already_txtcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/don_t_have_an_account_yet"
        android:visibility="visible"
        android:layout_marginStart="@dimen/size8"
        android:layout_marginEnd="@dimen/size8"
        android:layout_marginTop="@dimen/size6"
        android:layout_marginLeft="@dimen/size8"
        android:layout_marginRight="@dimen/size8"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintTop_toBottomOf="@+id/button_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        style="@style/FontAvenirMedium"
        android:textSize="@dimen/text11"
        android:id="@+id/textView_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:visibility="visible"
        android:textColor="@color/weblink_color"
        android:layout_marginStart="@dimen/size8"
        android:onClick="signUp"
        android:layout_marginLeft="@dimen/size8"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:ignore="OnClick" />

    <EditText
       style="@style/FontAvenirMedium"
        android:textSize="@dimen/text14"
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginRight="@dimen/size30"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/size30"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/size30"
        android:layout_marginEnd="@dimen/size30"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="1.0" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_password_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/size45"
        app:passwordToggleEnabled="true"
        android:layout_marginLeft="@dimen/size30"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="@dimen/size30"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/size30"
        android:layout_marginEnd="@dimen/size30"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.0">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_password"
            style="@style/FontAvenirMedium"
            android:textSize="@dimen/text14"
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>




    <TextView
        android:id="@+id/txt_forget_pwd"
        style="@style/FontAvenirMedium"
        android:textSize="@dimen/text11"
        android:textColor="@color/Already_txtcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:onClick="forgetPassword"
        app:layout_constraintRight_toRightOf="@+id/et_password_layout"
        app:layout_constraintTop_toBottomOf="@+id/et_password_layout"
        tools:ignore="OnClick" />

    <TextView
        style="@style/FontAvenirMedium"
        android:textSize="@dimen/text14"
        android:textColor="@color/email_color"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_address"
        app:layout_constraintLeft_toLeftOf="@+id/et_email"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/or_txt" />

    <TextView
        style="@style/FontAvenirMedium"
        android:textSize="@dimen/text14"
        android:textColor="@color/email_color"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        app:layout_constraintLeft_toLeftOf="@+id/et_password_layout"
        android:layout_marginTop="@dimen/size8"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_marginLeft="0dp" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:background="@color/light_grey"
        android:layout_marginBottom="@dimen/size9"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView4"
        style="@style/FontAvenirMedium"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:gravity="center_horizontal"
        android:text="@string/by_signing_up_you_agree_to_our_terms_of_service_privacy_policy"
        android:textColor="@color/Already_txtcolor"
        android:textSize="@dimen/text11"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>

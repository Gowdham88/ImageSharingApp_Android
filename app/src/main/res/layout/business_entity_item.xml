<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size10"
    android:background="@color/White_clr"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/size80"
        android:layout_height="@dimen/size60"
        android:elevation="@dimen/size10"
        app:cardCornerRadius="@dimen/size5">

        <ImageView
            android:id="@+id/notification_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/burger" />
    </android.support.v7.widget.CardView>

    <TextView
        style="@style/BoldTextStyle"
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginStart="@dimen/size10"
        android:layout_toRightOf="@id/card_view"
        android:text="Flatron" />


    <HorizontalScrollView
        android:id="@+id/chips_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_name"
        android:layout_toRightOf="@id/card_view"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size8"
            android:layout_marginLeft="@dimen/size8"
            android:layout_marginRight="@dimen/size8"
            android:layout_marginTop="@dimen/size8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TagStyle"
                android:text="food" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size4"
                style="@style/TagStyle"
                android:text="Rum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size4"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size4"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size4"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size4"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size4"
                style="@style/TagStyle"
                android:text="Wine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size4"
                style="@style/TagStyle"
                android:text="Wine" />
        </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White_clr">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            app:title="Numnu1"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="pin"
                app:layout_collapseParallaxMultiplier="0.7">

                <android.support.v7.widget.Toolbar
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/toolbar_background_color"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:contentInsetStart="0dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/toolbarback_image"
                            app:srcCompat="@drawable/backimg"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/size10"
                            android:layout_width="@dimen/size35"
                            android:layout_height="@dimen/size35" />
                        <TextView
                            android:id="@+id/toolbar_title"
                            android:text="Event"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text19"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/toolbar_image"
                            app:srcCompat="@drawable/event_dots"
                            android:layout_marginRight="@dimen/size8"
                            android:layout_marginEnd="@dimen/size8"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25" />
                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size13"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size8"
                        android:layout_below="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size150"
                        app:cardCornerRadius="@dimen/size5"
                        android:elevation="@dimen/size10">
                        <ImageView
                            android:id="@+id/current_event_image"
                            android:layout_width="match_parent"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"
                            android:src="@drawable/sasitem" />
                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_marginLeft="@dimen/spacing_small"
                        android:layout_marginRight="@dimen/spacing_small"
                        android:id="@+id/event_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_view"
                        android:layout_marginTop="4dp"
                        android:text="Food and Rum Festival"
                        android:textSize="@dimen/text16" />

                    <HorizontalScrollView
                        android:id="@+id/chips_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/event_name">


                        <LinearLayout
                            android:layout_marginLeft="@dimen/size8"
                            android:layout_marginRight="@dimen/size8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size4"
                                android:text="food" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size4"
                                android:text="Rum" />

                        </LinearLayout>

                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size8"
                        android:id="@+id/date_time_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/chips_layout"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_event_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_time"
                            android:drawablePadding="@dimen/size4"
                            android:padding="@dimen/size2"
                            android:gravity="center"
                            android:text="August 9 - 07.00 am" />

                        <TextView
                            android:id="@+id/txt_event_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="to" />
                        <TextView
                            android:id="@+id/txt_event_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/event_name"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/size4"
                            android:gravity="center"
                            android:padding="@dimen/size2"
                            android:text="August 14 - 11.00pm" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size8"
                        android:id="@+id/location_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/date_time_layout"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_city"
                            android:drawablePadding="@dimen/size4"
                            android:padding="@dimen/size4"
                            android:text="Montreal" />

                        <TextView
                            android:id="@+id/txt_view_event_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/event_name"
                            android:drawableLeft="@drawable/ic_maplocation"
                            android:padding="@dimen/size4"
                            android:textColor="@color/black"
                            android:text="Event Map" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/size8"
                        android:layout_marginRight="@dimen/size8"
                        android:id="@+id/weblinks_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/location_layout"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_weblink_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Weblink 1" />

                        <TextView
                            android:id="@+id/txt_weblink_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Weblink 2" />

                        <TextView
                            android:id="@+id/txt_weblink_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="Weblink 3" />
                    </LinearLayout>

                </LinearLayout>


                <com.numnu.android.utils.ExpandableTextView
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:id="@+id/event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="24dp"
                    android:layout_below="@+id/weblinks_layout"
                    android:text="@string/event_description" />
            </LinearLayout>


        </android.support.design.widget.CollapsingToolbarLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/event_details_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/dark_grey" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/event_details_viewpager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs" />




</android.support.design.widget.CoordinatorLayout>
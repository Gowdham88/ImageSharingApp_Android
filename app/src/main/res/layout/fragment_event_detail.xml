<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White_clr">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_with_options" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:layout_marginLeft="@dimen/size8"
                android:layout_marginRight="@dimen/size8"
                app:cardCornerRadius="@dimen/size5">

                <ImageView
                    android:id="@+id/current_event_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sasitem" />
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_marginLeft="@dimen/size8"
                android:layout_marginRight="@dimen/size8"
                android:background="@android:drawable/dialog_holo_light_frame" />


            <TextView
                android:id="@+id/event_name"
                style="@style/FontAvenirMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_marginLeft="@dimen/size8"
                android:layout_marginRight="@dimen/size8"
                android:layout_marginTop="@dimen/size8"
                android:text="Barbadous and food Rum Festival"
                android:textColor="@color/name_black"
                android:textSize="@dimen/text16"
                tools:ignore="MissingPrefix" />

            <HorizontalScrollView
                android:id="@+id/chips_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size8"
                    android:layout_marginLeft="@dimen/size8"
                    android:layout_marginRight="@dimen/size8"
                    android:layout_marginTop="@dimen/size8"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TagStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="food"
                        android:textColor="@color/tag_inside_text_color"
                        android:textSize="@dimen/size12" />

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/date_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chips_layout"
                android:layout_marginLeft="@dimen/size6"
                android:layout_marginRight="@dimen/size8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_event_date"
                    style="@style/FontAvenirMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="@dimen/size4"
                    android:gravity="center"
                    android:padding="@dimen/size2"
                    android:text="August 9, 07:00 am"
                    android:textColor="@color/time_color"
                    android:textSize="@dimen/text12" />

                <TextView
                    android:id="@+id/txt_event_to"
                    style="@style/FontAvenirMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text=" - "
                    android:textColor="@color/time_color"
                    android:textSize="@dimen/text12" />

                <TextView
                    android:id="@+id/txt_event_time"
                    style="@style/FontAvenirMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/event_name"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/size4"
                    android:gravity="center"
                    android:padding="@dimen/size2"
                    android:text="August 14, 11:00pm"
                    android:textColor="@color/time_color"
                    android:textSize="@dimen/text12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_time_layout"
                android:layout_marginLeft="@dimen/size6"
                android:layout_marginRight="@dimen/size8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_city"
                    style="@style/FontAvenirMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_city"
                    android:drawablePadding="@dimen/size4"
                    android:padding="@dimen/size4"
                    android:text="Montreal"
                    android:textSize="@dimen/text12" />

                <TextView
                    android:id="@+id/txt_view_event_map"
                    style="@style/FontAvenirheavy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_name"
                    android:drawableLeft="@drawable/ic_maplocation"
                    android:drawablePadding="@dimen/size4"
                    android:padding="@dimen/size4"
                    android:text="Event Map"
                    android:textColor="@color/event_map"
                    android:textSize="@dimen/text11" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weblinks_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_layout"
                android:layout_marginLeft="@dimen/size8"
                android:layout_marginRight="@dimen/size8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_weblink_1"
                    style="@style/FontAvenirMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size20"
                    android:layout_marginLeft="@dimen/size10"
                    android:text="Weblink 1"
                    android:textColor="@color/weblink_color"
                    android:textSize="@dimen/text11" />

                <TextView
                    android:id="@+id/txt_weblink_2"
                    style="@style/FontAvenirMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size20"
                    android:layout_marginLeft="@dimen/size10"
                    android:text="Weblink 2"
                    android:textColor="@color/weblink_color"
                    android:textSize="@dimen/text11" />

                <TextView
                    android:id="@+id/txt_weblink_3"
                    style="@style/FontAvenirMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size20"
                    android:layout_marginLeft="@dimen/size10"
                    android:text="Weblink 3"
                    android:textColor="@color/weblink_color"
                    android:textSize="@dimen/text11" />
            </LinearLayout>

            <com.numnu.android.utils.ExpandableTextView
                android:id="@+id/event_description"
                style="@style/FontAvenirMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weblinks_layout"
                android:layout_marginBottom="@dimen/size15"
                android:layout_marginLeft="@dimen/size8"
                android:layout_marginRight="@dimen/size8"
                android:layout_marginTop="@dimen/size14"
                android:text="@string/event_description"
                android:textColor="@color/descri_color"
                android:textSize="@dimen/text12" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_description"
                android:background="@android:color/white"
                app:tabSelectedTextColor="@color/event_map"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabTextColor="@color/tab_unselected_color" />

            <com.numnu.android.utils.ContentWrappingViewPager
                android:id="@+id/event_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tabs" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/toolbar_background_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="It was a Great night !! Amazing food very long one Header ..."
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:text="2hrs"
        android:paddingRight="20dp"
        android:textSize="18sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@+id/time"
        android:layout_height="250dp"
        android:src="@drawable/dup_vegrecipe"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/content_image"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/heart_icon"
        android:src="@drawable/ic_heart"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/content_image"
        />
    <TextView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/heart_count"
        android:layout_toRightOf="@id/heart_icon"
        android:text="15"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_below="@id/content_image"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/heart_count"
        android:layout_below="@id/content_image"
        android:src="@drawable/ic_chat_bubble_outline"
        android:id="@+id/comment"
        />
    <TextView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/comment_count"
        android:layout_toRightOf="@id/comment"
        android:text="8"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:backgroundTint="@color/toolbar_background_color"
        android:layout_below="@id/content_image"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/inlove_icon"
        android:src="@drawable/ic_in_love"
        android:layout_below="@+id/content_image"
        android:layout_toLeftOf="@+id/event_dots"
        android:layout_toStartOf="@+id/event_dots" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp"
        android:layout_below="@id/content_image"
        android:src="@drawable/ic_eventdots"
        android:id="@+id/event_dots"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/cottage_house_icon"
        android:layout_below="@id/heart_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_chat_bubble_outline"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/cottage_house_icon"
        android:layout_below="@id/heart_count"
        android:text="Cottage House"
        android:paddingLeft="8dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:id="@+id/cottage_house_txt"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/barbq_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/cottage_house_txt"
        android:src="@drawable/ic_chat_bubble_outline"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/cottage_house_txt"
        android:layout_toRightOf="@id/barbq_icon"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="Barbeque side platter"
        android:id="@+id/textView17" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/barbados_icon"
        android:layout_below="@id/barbq_icon"
        android:src="@drawable/ic_calendar"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/barbados_txt"
        android:text="Barbados food and rum festival"
        android:layout_toRightOf="@id/barbados_icon"
        android:layout_below="@id/barbq_icon"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/liked_users"
        android:layout_below="@id/barbados_icon"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:textColor="#72A9E9"
        android:layout_marginTop="10dp"
        android:text="Jesica Matthew, Sandy Butcher"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/liked_counts"
        android:layout_below="@id/barbados_icon"
        android:layout_toRightOf="@id/liked_users"
        android:text="+5 others"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="#72A9E9"
        />

</RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:id="@+id/bottom_sheet1"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:background="#FAFAFA"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/dialog_image"
            android:src="@drawable/messenger_button_send_round_shadow"
            android:tint="#727272"
            android:background="#FAFAFA"
            android:layout_above="@+id/bookmark_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="#727272"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bookmark_icon"
            android:layout_toEndOf="@+id/bookmark_icon" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:id="@+id/bookmark_icon"
            android:src="@drawable/messenger_button_send_round_shadow"
            android:background="#FAFAFA"
            android:layout_alignTop="@+id/bookmark_text"
            android:layout_alignLeft="@+id/dialog_image"
            android:layout_alignStart="@+id/dialog_image" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookmark_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bookmark"
            android:textColor="#727272"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/dialog_title"
            android:layout_alignLeft="@+id/dialog_title"
            android:layout_alignStart="@+id/dialog_title"
            android:layout_marginTop="22dp" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@color/White_clr"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/const_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.numnu.android.fragments.auth.LoginFragment"
    tools:layout_editor_absoluteY="@dimen/size25"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/toolbar_back"
        app:srcCompat="@drawable/back_arrow"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginStart="@dimen/size10"
        android:layout_marginTop="@dimen/size5"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/size25"
        android:layout_height="@dimen/size25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loginicon"
        android:id="@+id/imageView"
        android:layout_marginRight="@dimen/size8"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/size8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/size45"
        android:layout_marginStart="@dimen/size8"
        android:layout_marginEnd="@dimen/size8"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size8"
        android:layout_marginRight="@dimen/size8"
        android:layout_marginTop="@dimen/size16"
        android:text="@string/forgot_password_label"
        style="@style/login_heading_style"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginStart="@dimen/size8"
        android:layout_marginEnd="@dimen/size8" />

    <Button
        android:id="@+id/button_reset"
        style="@style/login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size30"
        android:layout_marginRight="@dimen/size30"
        android:layout_marginStart="@dimen/size30"
        android:layout_marginEnd="@dimen/size30"
        android:text="@string/reset_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/size25"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <EditText
        android:id="@+id/et_email"
        android:textSize="@dimen/text14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginRight="@dimen/size30"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/size30"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/size30"
        android:layout_marginEnd="@dimen/size30"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text14"
        android:textColor="@color/email_color"
        android:text="@string/email_address"
        android:layout_marginTop="@dimen/size65"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="@dimen/size2"
        app:layout_constraintLeft_toLeftOf="@+id/et_email"
        android:layout_marginStart="@dimen/size2" />

</android.support.constraint.ConstraintLayout>

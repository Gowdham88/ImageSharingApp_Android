<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Eventbussiness_lay"
    android:layout_margin="@dimen/event_details_margin"
    android:orientation="horizontal"
    tools:context="com.numnu.android.activity.HomeActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="@dimen/image_card_corner_radius"
        android:elevation="10dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/notification_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            />
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/card_view"
        android:layout_toRightOf="@+id/card_view"
        android:layout_toEndOf="@+id/card_view"
        app:layout_constraintLeft_toRightOf="@+id/card_view"
        android:layout_marginLeft="26dp"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintTop_toTopOf="@+id/card_view"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2hrs"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/text_notification"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_notification" />

    </LinearLayout>
</LinearLayout>
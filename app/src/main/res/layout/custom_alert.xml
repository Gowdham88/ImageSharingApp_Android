<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_background"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size80"
        android:src="@drawable/notification"
        android:contentDescription="@string/app_name" />
    <TextView
        style="@style/FontAvenirMedium"
        android:textSize="@dimen/text10"
        android:textColor="@color/autotxt_in_color"
        android:text="@string/enabling_notifications"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />

        <Button
            android:text="@string/ok"
            android:id="@+id/ok_button"
            style="@style/ok_button"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="@dimen/size110"
            android:textSize="@dimen/text13"
            android:layout_marginTop="@dimen/size10"
            android:layout_height="@dimen/size35"
            android:layout_marginBottom="@dimen/size4"
            />

</LinearLayout>